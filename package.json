    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.28.0",
    "eslint-plugin-github": "^4.1.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^27.0.4",
